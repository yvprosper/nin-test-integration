{
  "name": "youverify-api-starter",
  "version": "1.0.0",
  "private": true,
  "description": "A starter pack template for any Youverify service",
  "main": "index.js",
  "scripts": {
    "jsdoc": "echo 'Building JSDocs...' && npx rimraf docs/jsdoc && jsdoc src -r -c jsdoc-config.json -d docs/jsdoc",
    "restdoc": "echo 'Building REST Docs...' && apidoc -i src/interfaces/http/router/ -o docs/restdocs",
    "readmedoc": "echo 'Building Readme Docs...' && node src/scripts/readme/generateReadme.js ",
    "serve:docs": "docsify serve docs/template-doc",
    "install:hadolint": "chmod +x ./install-hadolint.sh && ./install-hadolint.sh",
    "build": "babel src --delete-dir-on-start  -d dist",
    "build:docs": "yarn jsdoc && yarn restdoc && yarn readmedoc",
    "lint:staged": "lint-staged",
    "seed:todos": "NODE_ENV=development yarn build && node dist/seeds/seedTodo.js",
    "start:dev": "NODE_ENV=development yarn build && node dist/start.js",
    "start:dev:rs": "nodemon",
    "lint": "TIMING=1 node_modules/.bin/eslint --ext .js src/",
    "lint:fix": "node_modules/.bin/eslint --fix --ext  .js .",
    "test": "yarn build && NODE_ENV=test node_modules/.bin/nyc mocha test/index.js --require @babel/register --exit",
    "update:stub": "cd src/interfaces/grpc/services-protos-nodejs && git pull origin master && cd ../../../..",
    "fresh-install": "rm -rf node_modules && yarn cache clean --force && yarn install",
    "start:jaeger:dev": "docker run -d --name jaeger -e COLLECTOR_ZIPKIN_HOST_PORT=:9411 -p 5775:5775/udp -p 6831:6831/udp -p 6832:6832/udp -p 5778:5778 -p 16686:16686 -p 14268:14268 -p 14250:14250 -p 9411:9411 jaegertracing/all-in-one:1.22 && open http://localhost:16686",
    "stop:jaeger:dev": "docker stop jaeger && docker rm jaeger"
  },
  "lint-staged": {
    "src/**/*.{js,jsx,ts,tsx}": [
      "prettier --write",
      "eslint --ext  .js src/"
    ],
    "*.{yml,yaml}": [
      "prettier --write",
      "yamllint *.{yaml,yml}"
    ],
    "Dockerfile": [
      "yarn install:hadolint && hadolint Dockerfile"
    ]
  },
  "keywords": [],
  "author": "",
  "license": "Proprietary",
  "dependencies": {
    "@airbnb/node-memwatch": "^2.0.0",
    "@babel/runtime": "^7.11.2",
    "@elastic/elasticsearch": "^7.12.0",
    "@grpc/grpc-js": "^1.2.11",
    "@grpc/proto-loader": "^0.5.6",
    "@hapi/joi-date": "^2.0.1",
    "amqp-connection-manager": "^3.2.2",
    "amqplib": "^0.7.1",
    "async-redis": "^1.1.7",
    "auto-bind-inheritance": "^1.0.6",
    "awilix": "^4.2.6",
    "awilix-express": "^3.0.0",
    "axios": "^0.21.1",
    "bcryptjs": "^2.4.3",
    "chance": "^1.1.7",
    "compression": "^1.7.4",
    "convict": "^6.0.0",
    "convict-format-with-validator": "^6.0.0",
    "cors": "^2.8.5",
    "create-grpc-error": "^0.1.0",
    "docsify-cli": "^4.4.3",
    "dotenv-extended": "^2.9.0",
    "elastic-builder": "^2.13.0",
    "express": "^4.17.1",
    "express-joi-validation": "^5.0.0",
    "express-jwt-permissions": "^1.3.3",
    "express-useragent": "^1.0.15",
    "express-validation": "^3.0.6",
    "flat": "^5.0.2",
    "fluent-logger": "^3.4.1",
    "google-protobuf": "^3.15.6",
    "grpc": "^1.24.6",
    "helmet": "^4.4.1",
    "highlight.js": "^10.7.2",
    "http-status-codes": "^2.1.4",
    "jaeger-client": "^3.18.1",
    "joi": "^17.4.0",
    "libphonenumber-js": "^1.9.16",
    "lodash": "^4.17.20",
    "mali": "^0.41.1",
    "marked": "^2.0.3",
    "method-override": "^3.0.0",
    "moment": "^2.29.1",
    "moment-timezone": "^0.5.31",
    "mongoose": "^5.12.1",
    "mongoose-beautiful-unique-validation": "^7.1.1",
    "mongoose-paginate-v2": "^1.3.17",
    "on-http-end": "^1.0.2",
    "opentracing": "^0.14.5",
    "public-ip": "^4.0.4",
    "redis": "^3.1.2",
    "request-ip": "^2.1.3",
    "validator": "^13.1.17"
  },
  "devDependencies": {
    "@babel/cli": "^7.11.6",
    "@babel/core": "^7.11.6",
    "@babel/node": "^7.10.5",
    "@babel/plugin-transform-runtime": "^7.11.5",
    "@babel/preset-env": "^7.11.5",
    "@babel/register": "^7.11.5",
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-conventional": "^11.0.0",
    "apidoc": "^0.25.0",
    "babel-plugin-module-resolver": "^4.0.0",
    "babel-plugin-transform-remove-console": "^6.9.4",
    "branch-name-lint": "git+https://github.com/YouverifyHQ/branch-name-lint.git",
    "cross-env": "^7.0.2",
    "eslint": "^7.10.0",
    "eslint-config-airbnb-base": "^14.2.0",
    "eslint-config-prettier": "^6.12.0",
    "eslint-import-resolver-babel-module": "^5.2.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-prettier": "^3.1.4",
    "husky": "^4.3.0",
    "jsdoc": "^3.6.6",
    "jsdoc-to-markdown": "^6.0.1",
    "lint-staged": "^10.4.0",
    "mocha": "^8.1.3",
    "nodemon": "^2.0.4",
    "nyc": "^15.1.0",
    "prettier": "^2.1.2",
    "yaml-lint": "^1.2.4"
  }
}
